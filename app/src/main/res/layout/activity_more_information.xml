<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



            <RelativeLayout android:id="@+id/page_register_ek1"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <View   android:id="@+id/_bg__register_ek2"
                    android:background="@drawable/_bg__register_ek2_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="375dp"
                    android:layout_height="812dp" />


                <RelativeLayout android:id="@+id/register__button_"
                    android:layout_marginTop="625dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <Button
                        android:id="@+id/update_btn"
                        android:backgroundTint="@color/black"
                        android:layout_marginStart="0dp"
                        android:text="Update"
                        android:textSize="25dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="331dp"
                        android:layout_height="56dp" />



                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rectangle_4_ek3_shape"

                    >
                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/confirm_password_color"
                        android:text="Single" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:text="Married"
                        android:textColor="@color/confirm_password_color"/>


                </RadioGroup>

                <RelativeLayout android:id="@+id/facebook_id"
                    android:layout_marginTop="545dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/facebook"
                        android:background="@drawable/rectangle_4_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/confirm_password_color"
                        android:layout_width="333dp"

                        android:hint="Facebook ID(optional)"

                        android:layout_height="58dp" />




                </RelativeLayout>


                <RelativeLayout android:id="@+id/instagram_id"
                    android:layout_marginTop="479dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/instagram"
                        android:background="@drawable/rectangle_4_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/confirm_password_color"
                        android:layout_width="333dp"

                        android:hint="Instagram ID(optional)"

                        android:layout_height="58dp" />
                </RelativeLayout>


                <RelativeLayout android:id="@+id/confirm_password__input_"
                    android:layout_marginTop="409dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/age"
                        android:background="@drawable/rectangle_4_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/confirm_password_color"
                        android:layout_width="333dp"

                        android:hint="Age"

                        android:layout_height="58dp" />




                </RelativeLayout>


                <RelativeLayout android:id="@+id/password__input_"
                    android:layout_marginTop="341dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText   android:id="@+id/dateOfBirth"
                        android:background="@drawable/rectangle_4_ek1_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:hint="DOB"
                        android:inputType="date"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/confirm_password_color"
                        android:layout_width="333dp"
                        android:layout_height="58dp" />


                </RelativeLayout>


                <RelativeLayout android:id="@+id/email__input_"
                    android:layout_marginTop="273dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/lookingFor"
                        android:layout_width="333dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/rectangle_4_ek2_shape"
                        android:hint="you'r here for"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:textColorHint="@color/confirm_password_color" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/genderError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="250dp"/>


                <RelativeLayout android:id="@+id/username__input_"
                    android:layout_marginTop="205dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText   android:id="@+id/job"
                        android:background="@drawable/rectangle_4_ek3_shape"
                        android:layout_marginStart="0dp"
                        android:textColorHint="@color/confirm_password_color"
                        android:layout_marginTop="0dp"
                        android:layout_width="333dp"
                        android:paddingStart="10dp"
                        android:hint="JOB eg, software developer"
                        android:layout_height="58dp" />


                </RelativeLayout>


                <RelativeLayout android:id="@+id/text"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView android:id="@+id/hello__register_to_get_started"

                        android:textStyle="bold"
                        android:textSize="23sp"
                        android:textColor="@color/already_have_an_account__login_now_color"
                        android:layout_marginLeft="0dp"
                        android:layout_width="366dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:text="Tell more about you!"
                        />

                </RelativeLayout>


                <RelativeLayout android:id="@+id/back_view"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="goToFrontPage"
                    >

                    <View   android:id="@+id/rectangle_161"
                        android:background="@drawable/rectangle_161_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="43dp"
                        android:layout_height="43dp" />


                    <RelativeLayout android:id="@+id/back_arrow"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/vector"
                            android:layout_width="8.5dp"
                            android:layout_height="14.86dp"
                            android:layout_marginStart="4.95dp"
                            android:layout_marginTop="2.08dp"
                            android:contentDescription="vector"
                            android:src="@drawable/vector" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>